# Development Environment Variables
# Copy this to .env for local development

# Database
DATABASE_URL=postgres://postgres:postgres@postgres:5432/medusa-store-dev?sslmode=disable
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=medusa-store-dev

# Redis
REDIS_URL=redis://localhost:6379

# Medusa Secrets (DEVELOPMENT ONLY - NOT SECURE)
JWT_SECRET=dev-jwt-secret-change-me
COOKIE_SECRET=dev-cookie-secret-change-me

# CORS Settings for Development
STORE_CORS=http://localhost:3000,http://localhost:8000
ADMIN_CORS=http://localhost:9000,http://localhost:7001
AUTH_CORS=http://localhost:9000,http://localhost:3000

# Admin Settings
DISABLE_MEDUSA_ADMIN=false

# URLs
MEDUSA_BACKEND_URL=http://localhost:9000
NEXT_PUBLIC_MEDUSA_BACKEND_URL=http://localhost:9000
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Ports
BACKEND_PORT=9000
STOREFRONT_PORT=3000