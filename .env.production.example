# Production Environment Variables
# Copy this to .env.production and update with your production values
# NEVER commit this file to git!

# Database (AWS RDS PostgreSQL)
DATABASE_URL=postgres://username:password@prod-rds-endpoint.region.rds.amazonaws.com:5432/medusa_store_prod
POSTGRES_USER=prod_user
POSTGRES_PASSWORD=ultra_secure_production_password
POSTGRES_DB=medusa_store_prod

# Redis (AWS ElastiCache)
REDIS_URL=rediss://prod-redis-cluster.cache.amazonaws.com:6380

# Medusa Secrets (CRITICAL: GENERATE STRONG RANDOM VALUES)
JWT_SECRET=production-jwt-secret-64-chars-minimum-random-string-here
COOKIE_SECRET=production-cookie-secret-64-chars-minimum-random-string-here

# CORS Settings for Production
STORE_CORS=https://gyvagaudziaispastai.com,https://www.gyvagaudziaispastai.com
ADMIN_CORS=https://admin.gyvagaudziaispastai.com
AUTH_CORS=https://admin.gyvagaudziaispastai.com,https://gyvagaudziaispastai.com

# Admin Settings (Usually disabled in production for security)
DISABLE_MEDUSA_ADMIN=true
MEDUSA_WORKER_MODE=server

# URLs
MEDUSA_BACKEND_URL=https://api.gyvagaudziaispastai.com
NEXT_PUBLIC_MEDUSA_BACKEND_URL=https://api.gyvagaudziaispastai.com
NEXT_PUBLIC_BASE_URL=https://gyvagaudziaispastai.com

# AWS Settings (if using AWS services)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Performance
NODE_OPTIONS=--max_old_space_size=2048

# Ports (ALB/ELB configuration)
BACKEND_PORT=9000
STOREFRONT_PORT=3000