# Staging Environment Variables
# Copy this to .env.staging and update with your staging values

# Database (Staging Database)
DATABASE_URL=postgres://username:password@staging-db-host:5432/medusa-store-staging
POSTGRES_USER=staging_user
POSTGRES_PASSWORD=secure_staging_password
POSTGRES_DB=medusa-store-staging

# Redis (Staging Cache)
REDIS_URL=redis://staging-redis-host:6379

# Medusa Secrets (GENERATE SECURE VALUES)
JWT_SECRET=staging-jwt-secret-generate-secure-value
COOKIE_SECRET=staging-cookie-secret-generate-secure-value

# CORS Settings for Staging
STORE_CORS=https://staging-store.yourdomainname.com
ADMIN_CORS=https://staging-admin.yourdomainname.com
AUTH_CORS=https://staging-admin.yourdomainname.com,https://staging-store.yourdomainname.com

# Admin Settings
DISABLE_MEDUSA_ADMIN=false

# URLs
MEDUSA_BACKEND_URL=https://staging-api.yourdomainname.com
NEXT_PUBLIC_MEDUSA_BACKEND_URL=https://staging-api.yourdomainname.com
NEXT_PUBLIC_BASE_URL=https://staging-store.yourdomainname.com

# Ports (if needed for load balancer)
BACKEND_PORT=9000
STOREFRONT_PORT=3000